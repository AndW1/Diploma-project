@model TaskManager.Models.BoardTask

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<style>
    .send {
        float: left;
    }

    #link {
        color: dodgerblue;
    }
    #inline {
        display: flex;
        align-items:center;
    }
 
</style>



<div class="container">
    <h4>Delete</h4>

    <h5>Are you sure you want to delete this?</h5>

</div>



<div class="container">
   
        <h5>BoardTask</h5>
        <hr />
        <div class="row">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.NameTask)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NameTask)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ContentTask)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ContentTask)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DateFinished)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DateFinished)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.BackgroundImage)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.BackgroundImage)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.TaskCreated)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TaskCreated)
                </dd>

            </dl>
        </div>

        <div class="row">

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div id="inline">
                    <div class="send">
                        <button type="submit" class="btn" id="createtask">Delete</button>  &nbsp;
                    </div>
                    <div class="send">
                        <a asp-action="Index" id="link">Back to BoardTask</a>
                    </div>

                </div>
               
            </form>

        </div>
        
   
</div>

